@using fantasyF1.Models

@{
    ViewBag.Title = "Index";
}

<h2>List of Rosters</h2>


@if (User.IsInRole("Administrator"))
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">User who created the roster</th>
                <th scope="col">Price</th>
                <th scope="col">Unique Code</th>
                <th scope="col">Points</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var roster in ViewBag.Rosters)
            {
                <tr>
                    <td>@roster.User</td>
                    <td>@roster.Price</td>
                    <td>@roster.UniqueCode</td>
                    <td>@roster.Points</td>
                    <td><a href="/rosters/edit/@roster.RosterId" class="btn btn-warning">Edit</a></td>
                    <td><a href="/rosters/delete/@roster.RosterId" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">User who created the roster</th>
                <th scope="col">Price</th>
                <th scope="col">Unique Code</th>
                <th scope="col">Points</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var roster in ViewBag.Rosters)
            {
                <tr>
                    <td>@roster.User</td>
                    <td>@roster.Price</td>
                    <td>@roster.UniqueCode</td>
                    <td>@roster.Points</td>
                </tr>
            }
        </tbody>
    </table>
}


@if (User.IsInRole("User"))
{

    <br />
    <a href="/rosters/create" class="btn btn-success">Create roster</a>
    <br />
}

@if (User.IsInRole("Administrator"))
{

    <br />
    <a href="/rosters/create" class="btn btn-success">Create roster</a>
    <br />
    <br />
    <a href="/rosters/update" class="btn btn-success">Update rosters</a>
    <br />
}
