@using fantasyF1.Models

@{
    ViewBag.Title = "Index";
}


<h2>List of Motors</h2>
@if (User.IsInRole("Administrator"))
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Logo</th>
                <th scope="col">Price</th>
                <th scope="col">Expected finish</th>
                <th scope="col">Points</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var motor in ViewBag.Motors)
            {
                <tr>
                    <td>@motor.Name</td>
                    <td><img style="width: 15%;" src="@motor.Photo"/></td>
                    <td>@motor.Price</td>
                    <td>@motor.ExpectedFinish</td>
                    <td>@motor.Points</td>
                    <td><a href="/motors/edit/@motor.MotorId" class="btn btn-warning">Edit</a></td>
                    <td><a href="/motors/delete/@motor.MotorId" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Logo</th>
                <th scope="col">Price</th>
                <th scope="col">Expected finish</th>
                <th scope="col">Points</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var motor in ViewBag.Motors)
            {
            <tr>
                <td>@motor.Name</td>
                <td><img style="width: 15%;" src="@motor.Photo" /></td>
                <td>@motor.Price</td>
                <td>@motor.ExpectedFinish</td>
                <td>@motor.Points</td>
            </tr>
            }
        </tbody>
    </table>
}

@if (User.IsInRole("Administrator"))
{
    <a href="/motors/create" class="btn btn-success">Create motor</a>
}