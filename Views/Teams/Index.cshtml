@using fantasyF1.Models

@{
    ViewBag.Title = "Index";
}

<h2>List of Teams</h2>
@if (User.IsInRole("Administrator")){
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Expected finish</th>
            <th scope="col">Points</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var team in ViewBag.Teams)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Price</td>
                <td>@team.ExpectedFinish</td>
                <td>@team.Points</td>
                <td><a href="/teams/edit/@team.TeamId" class="btn btn-warning">Edit</a></td>
                <td><a href="/teams/delete/@team.TeamId" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
}
else{
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Expected finish</th>
            <th scope="col">Points</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var team in ViewBag.Teams)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Price</td>
                <td>@team.ExpectedFinish</td>
                <td>@team.Points</td>
            </tr>
        }
    </tbody>
</table>
}

@if (User.IsInRole("Administrator"))
{
    <a href="/teams/create" class="btn btn-success">Create team</a>
}