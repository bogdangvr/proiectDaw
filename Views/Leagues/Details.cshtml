@model fantasyF1.Models.League

@{
    ViewBag.Title = "Details";
}

<h2>Accepted rosters in @Model.Name</h2>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">User who created the roster</th>
            <th scope="col">Price</th>
            <th scope="col">Unique Code</th>
            <th scope="col">Points</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var roster in Model.Rosters.OrderByDescending(x => x.Points))
        {
            <tr>
                <td>@roster.User</td>
                <td>@roster.Price</td>
                <td>@roster.UniqueCode</td>
                <td>@roster.Points</td>
            </tr>
        }
    </tbody>
</table>

<br />

<div>League created on @Model.CreatedTime</div>